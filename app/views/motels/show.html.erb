
<div class="container p-5">
 <div class="row">
  <div class="col-sm-4 offset-4">
   <h1>
    <%= @motel.name %>
    <small><%= @motel.address %></small>
   </h1>
   <h2>
    <%= pluralize @motel.reviews.size, "review" %>
   </h2>

   <div id="reviews">
    <% if @motel.reviews.blank? %>
     Be the first to leave a review for <%= @motel.name %>
    <% else %>
     <% @motel.reviews.each do |review| %>
      <p><%= review.content %></p>
     <% end %>
    <% end %>
   </div>

   <%= simple_form_for([ @motel, @review ]) do |f| %>
    <%= f.input :content, as: :text %>
    <%= f.button :submit %>
   <% end %>
  </div>
 </div>
</div>

